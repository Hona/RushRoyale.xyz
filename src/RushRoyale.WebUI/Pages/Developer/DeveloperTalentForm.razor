<MudForm Model="Value">
    <MudTextField @bind-Value="Value.Name" Label="@nameof(Value.Name)" Variant="Variant.Outlined" Margin="Margin.Dense"/>
    <MudTextField @bind-Value="Value.IconUrl" Label="@nameof(Value.IconUrl)" Variant="Variant.Outlined" Margin="Margin.Dense"/>
    <MudTextField @bind-Value="Value.Description" Label="@nameof(Value.Description)" Variant="Variant.Outlined" Margin="Margin.Dense" Lines="4" />
</MudForm>

@code {
    [Parameter]
    public Talent Value { get; set; } = null!;

    protected override void OnParametersSet()
    {
        if (Value is null)
        {
            throw new ArgumentNullException(nameof(Value));
        }
    }

}
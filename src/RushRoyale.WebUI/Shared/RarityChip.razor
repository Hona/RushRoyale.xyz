@using RushRoyale.WebUI.Models

@switch (Value)
{
    case Rarity.Common:
        <MudChip Color="Color.Default" Value="Value">Common</MudChip>
        break;
    case Rarity.Rare:
        <MudChip Color="Color.Info" Value="Value">Rare</MudChip>
        break;
    case Rarity.Epic:
        <MudChip Color="Color.Primary" Value="Value">Epic</MudChip>
        break;
    case Rarity.Legendary:
        <MudChip Color="Color.Warning" Value="Value">Legendary</MudChip>
        break;
    default:
        throw new ArgumentOutOfRangeException();
}

@code {
    [Parameter]
    public Rarity Value { get; set; }
}